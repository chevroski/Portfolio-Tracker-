<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.portfoliotracker.controller.PassphraseController"
      alignment="CENTER" spacing="20" prefWidth="400" prefHeight="250" styleClass="dialog-content">
    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>
    
    <Label text="ðŸ” PortfolioTracker" styleClass="dialog-title"/>
    <Label text="Enter your passphrase to unlock encrypted data" styleClass="dialog-subtitle"/>
    
    <VBox spacing="10">
        <Label text="Passphrase:" styleClass="field-label"/>
        <PasswordField fx:id="passphraseField" promptText="Enter passphrase..." prefWidth="300"/>
    </VBox>
    
    <Label fx:id="errorLabel" text="" styleClass="error-label"/>
    
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="unlockBtn" text="Unlock" onAction="#onUnlock" styleClass="btn-primary" prefWidth="120"/>
        <Button text="Skip" onAction="#onSkip" styleClass="btn-secondary" prefWidth="120"/>
    </HBox>
    
    <CheckBox fx:id="enableEncryptionCheck" text="Enable encryption for this session" selected="true"/>
    
</VBox>
