<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.portfoliotracker.controller.AssetController"
      spacing="15" prefWidth="400" styleClass="dialog-content">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <Label text="Add New Asset" styleClass="dialog-title"/>
    
    <GridPane hgap="10" vgap="10">
        <Label text="Ticker:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="tickerField" promptText="BTC, ETH, AAPL..." GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        
        <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="nameField" promptText="Bitcoin, Ethereum..." GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        
        <Label text="Type:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <ComboBox fx:id="typeCombo" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        
        <Label text="Quantity:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="quantityField" promptText="0.5" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        
        <Label text="Price per unit:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <HBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="4">
            <TextField fx:id="priceField" promptText="Auto or manual" HBox.hgrow="ALWAYS"/>
            <Button fx:id="fetchPriceBtn" text="Fetch" onAction="#onFetchPrice" styleClass="btn-secondary" prefWidth="60"/>
        </HBox>
        
        <Label text="Date:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <DatePicker fx:id="datePicker" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
        
        <Label text="Fees:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
        <TextField fx:id="feesField" promptText="0.00" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
    </GridPane>
    
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Pane HBox.hgrow="ALWAYS"/>
        <Button text="Cancel" onAction="#onCancel" styleClass="btn-secondary"/>
        <Button text="Save" onAction="#onSave" styleClass="btn-primary"/>
    </HBox>
    
</VBox>
